<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<GridPane alignment="center" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mjamsek.clockwork.controllers.Controller">

    <fx:define>
        <ToggleGroup fx:id="toggleGrp" />
    </fx:define>

    <Label text="LAbela 1" fx:id="lbl1"/>

    <RadioButton text="Easy" toggleGroup="$toggleGrp" onAction="#handleSelection" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
    <RadioButton text="Normal" toggleGroup="$toggleGrp" onAction="#handleSelection" GridPane.rowIndex="1" GridPane.columnIndex="2"/>
    <RadioButton text="Hard" toggleGroup="$toggleGrp" onAction="#handleSelection" GridPane.rowIndex="1" GridPane.columnIndex="3"/>

</GridPane>
